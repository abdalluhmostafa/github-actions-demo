<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A Simple To-Do List App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>A Simple To-Do List App</h1>

    <form action="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="Add new task">
        <button type="submit">Add Task</button>
    </form>

    <h2>Added Tasks</h2>
    <ul>
        <% task.forEach(function(task) { %>
            <li><%= task.task %></li>
        <% }) %>
    </ul>

    <form action="/removetask" method="POST">
        <h2>Remove Task</h2>
        <ul>
            <% task.forEach(function(task) { %>
                <li>
                    <input type="checkbox" name="check" value="<%= task.task %>">
                    <%= task.task %>
                </li>
            <% }) %>
        </ul>
        <button type="submit">Remove</button>
    </form>

    <h2>Completed Tasks</h2>
    <ul>
        <% complete.forEach(function(task) { %>
            <li><%= task.task %></li>
        <% }) %>
    </ul>
</body>
</html>
